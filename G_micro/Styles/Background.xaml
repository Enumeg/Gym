<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="Window_Background" EndPoint="0,0" StartPoint="0,1">
        <GradientStop Color="Black" Offset="0" />
        <GradientStop Color="#18212a" Offset="0.5" />
        <GradientStop Color="Black" Offset="1" />
    </LinearGradientBrush>
    <RadialGradientBrush x:Key="Page_Background" RadiusX="1" RadiusY="2">
        <GradientStop Color="Black" Offset="0" />
        <GradientStop Color="#18212a" Offset="0.5" />
        <GradientStop Color="Black" Offset="1" />
    </RadialGradientBrush>
    <SolidColorBrush x:Key="Border" Color="LightGray"/>
</ResourceDictionary>