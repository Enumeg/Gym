<Window x:Class="G_micro.Reception" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="300" Width="892" WindowState="Maximized" Background="#18212a">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame Grid.Row="2" NavigationUIVisibility="Hidden" Name="Frame" Navigated="Frame_Navigated"/>
        <Border BorderBrush="Black" BorderThickness="3" Padding="0,2">
            <Grid Name="BTN_GD">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Style="{StaticResource Tabs}" Click="Customer_BTN_Click" Content="العملاء" Background="#FF323B3B" Tag="/G_micro;component/Images/Woman.ico" Name="Customer_BTN"/>
                <Button Grid.Column="0" Style="{StaticResource Tabs}" Click="Ourcome_BTN_Click" Content="المصروفات" Background="#FF323B3B" Tag="/G_micro;component/Images/Doctor.ico" Name="Ourcome_BTN" />
            </Grid>
        </Border>
    </Grid>
</Window>
